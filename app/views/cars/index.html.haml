- content_for :head do
  %meta{:content => "no-cache", :name => "turbolinks-cache-control"}/

.container-fluid
  = render 'shared/search'
  
  .row
    .col-2
      = render 'shared/filters'
    .col-8
      .container.cars-index
        .row
          - @cars.each_slice(4) do |cars|
            .card-deck.mx-auto
              - cars.each do |car|
                .mb-3{style: 'width: 20rem;'}
                  = react_component('car/car_card', car.as_card_hash)
