= link_to @next_car do
  .arrow.prev-car.pointable
    %i.fas.fa-chevron-left

.row.car-show
  .col-md-3.left-part
    .features
      = image_tag 'icons/engine.svg', size: '30x30'
      = image_tag 'icons/car.svg', size: '30x30'
      = image_tag 'icons/gas-station.svg', size: '30x30'
      = image_tag 'icons/gearshift.svg', size: '30x30'

  .col-md-6.images-wrapper
    = react_component('CarImages', { images: @car.images_to_json })

  .col-md-3.right-part
    %h1.thin
      .float-left
        = @car.title
      .float-right
        = '$' + @car.price.to_s
      .clearfix
    .description
      = @car.description

= link_to @prev_car do
  .arrow.next-right.pointable
    %i.fas.fa-chevron-right
