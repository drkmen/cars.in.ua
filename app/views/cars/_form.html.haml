.container
  = form_for [@car.category, @car] do |f|

    %h3
      Tell us, there is the car
      %hr

    .form-row
      -#= f.fields_for :address do |ff|
      .col-3
        .form-group
          -#= @related_data[:regions].map { |region| region[:name] }
          = f.label :region
          = f.select :region_id, @related_data[:regions].map { |region| [region[:name], region[:id]] }, {}, class: 'custom-select'
      .col-3
        .form-group
          = f.label :city
          = f.select :city_id, @related_data[:cities].map { |city| [city[:name], city[:id]] }, {}, class: 'custom-select'
      .col-3
        .form-group
          = f.label :category
          = f.select :category_id, @related_data[:categories].map { |c_t| [c_t[:name], c_t[:id]] }, {}, class: 'custom-select'
      .col-3
        .form-group
          = f.label :car_carcass
          = f.select :car_carcass_id, @related_data[:carcarcasses].map { |cr| [cr[:name], cr[:id]] }, {}, class: 'custom-select'

    %h3
      Main
      %hr

    .form-row
      .col-3
        .form-group
          = f.label :mark
          = f.select :mark_id, @related_data[:carmarks].map { |mark| [mark[:name], mark[:id]] }, { prompt: 'Select Mark' }, class: 'custom-select'
      .col-3
        .form-group
          = f.label :model
          = f.select :model_id, [], {}, { class: 'custom-select', disabled: true }
      .col-3
        .form-group
          = f.label :year
          = f.number_field :year, in: (1970..DateTime.now.year), step: 1, class: 'form-control'
      .col-3
        .form-group
          = f.label :transmission
          = f.select :transmission_id, @related_data[:transmissions].map { |tr| [tr[:name], tr[:id]] }, {}, class: 'custom-select'

    .form-row
      .col-3
        .form-group
          = f.label :engine
          = f.text_field :engine, class: 'form-control'
      .col-3
        .form-group
          = f.label :mileage
          = f.text_field :mileage, class: 'form-control'
      .col-3
        .form-group
          = f.label :price
          = f.text_field :price, class: 'form-control'
      .col-3
        .form-group
          = f.label :color
          = f.text_field :color, class: 'form-control'

    %h3
      General
      %hr

    .form-row
      .col-3
        .form-group
          = f.label :fuel
          = f.select :fuel_id, @related_data[:fuels].map { |fuel| [fuel[:name], fuel[:id]] }, {}, class: 'custom-select'
      .col-3
        .form-group
          = f.label :vin
          = f.text_field :vin, class: 'form-control'
      .col-3
        .form-group
          = f.label :equipment
          = f.text_field :equipment, class: 'form-control'
      .col-3
        .form-group
          = f.label :doors
          = f.text_field :doors, class: 'form-control'

    .form-row
      .col-12
        .form-group
          = f.label :description
          = f.text_area :description, class: 'form-control'
        .form-group
          = f.file_field :images, class: 'form-control-file', multiple: true

    %h3
      Sold
      %hr

    .form-row
      .col-6
        .form-group
          = f.label :sold
          = f.check_box :sold, class: 'form-control'

        .form-group
          = f.label :completed
          = f.check_box :completed, class: 'form-control'

    %h3
      Options
      %hr

    .form-row
      - Option.all.group_by(&:type).each do |options|
        %div{ class: "col-#{12 / Option.all.group_by(&:type).size}"}
          %h5= options.first
          - options.last.each do |opt|
            .option-group
              %label
                = check_box_tag 'car[option_ids][]', opt.id.to_s, @car.options.pluck(:id).include?(opt.id)
                = opt.name
                &nbsp


            -#%br
          -#options[options_ids][]

          -#= collection_check_boxes :options, :options_ids, options[1], :id, :name do |b|
            = b.label(class: "check_box") { b.check_box(class: '') + b.text }
        -#<%=collection_check_boxes(:player_profile, :playing_role_ids, PlayerRole.all, :id, :name)%>
        -#= f.fields_for :options, @car.options do |opt_fields|
          = opt_fields.check_box :name


    .form-row
      .form-group
        = f.submit class: 'btn btn-warning'
